{
	"manifest_version": 2,
	"name": "__MSG_extName__",
	"version": "1.0.0",
	"default_locale": "es",

	"description": "__MSG_extDescription__",

	"icons": {
		"32": "icons/icon.svg",
		"48": "icons/icon.svg",
		"64": "icons/icon.svg"
	},
	"permissions": ["<all_urls>", "storage", "tabs"],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["i18n.js", "content.js"]
		}
	],
	"browser_action": {
		"default_icon": {
			"32": "icons/icon.svg",
			"48": "icons/icon.svg",
			"64": "icons/icon.svg"
		},
		"default_title": "__MSG_extTitle__",
		"default_popup": "popup/popup.html"
	}
}
